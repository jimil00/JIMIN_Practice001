package practice002;

public class AccountingAppPlus {

	public static void main(String[] args) {
		
		double ValueOfSpply = 12345.0;
		double vatRate = 0.1;
		double expenseRate = 0.3;
		double vat = ValueOfSpply*vatRate;
		double total = ValueOfSpply + vat;
		double expense = ValueOfSpply*expenseRate;
		double income = ValueOfSpply - expense;
		double dividend1 = (ValueOfSpply - ValueOfSpply*0.3) * 0.5;
		double dividend2 = (ValueOfSpply - ValueOfSpply*0.3) * 0.3;
		double dividend3 = (ValueOfSpply - ValueOfSpply*0.3) * 0.2;
		System.out.println("Value of supply : "+ValueOfSpply);                
		System.out.println("VAT : "+vat);               
		System.out.println("Total : "+total);
		System.out.println("Expense : "+expense);
		System.out.println("Income : "+income);
		System.out.println("Dividend 1 : "+dividend1);
		System.out.println("Dividend 2 : "+dividend2);
		System.out.println("Dividend 3 : "+dividend3);
		
		//변수화시키기: 드래그후 우클릭 리팩터 익스트림로컬베리어블
		

	}

}
